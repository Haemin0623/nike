<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.ch.nike.mapper.ProductPhotoMapper">

	<select id="selectPP" parameterType="integer" resultType="ProductPhoto">
		select * from product_photo where product_no=#{productNo}
	</select>
		<select id="colorChange" parameterType="hashmap" resultType="ProductPhoto">
		select * from product_photo where product_no=#{productNo} and color=#{color}
	</select>
	<select id="getPhoto" parameterType="hashmap" resultType="ProductPhoto">
		select	* 
		from	product_photo
		where	product_no=#{productNo} 
			and color=#{color}
			and batch=1
	</select>
</mapper>